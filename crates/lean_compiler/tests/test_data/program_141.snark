// Test: Match with conditions inside non-unrolled loop

fn main() {
    mut a = 0;
    mut b = 0;
    for i in 0..3 {
        match i {
            0 => {
                a += 1;
                if a == 1 {
                    b += 10;
                }
            }
            1 => {
                a += 2;
                if a == 3 {
                    b += 20;
                }
            }
            2 => {
                a += 4;
                if a == 7 {
                    b += 40;
                }
            }
        }
    }
    // i=0: a=1, b=10
    // i=1: a=3, b=30
    // i=2: a=7, b=70
    assert a == 7;
    assert b == 70;
    return;
}
