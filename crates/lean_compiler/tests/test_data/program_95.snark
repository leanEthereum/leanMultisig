// test_mutable_edge_multiple_vars_in_loop_with_conditions
fn main() {
    mut evens = 0;
    mut odds = 0;
    mut all = 0;

    for i in 0..6 unroll {
        all = all + 1;
        remainder = i % 2;
        if remainder == 0 {
            evens = evens + i;
        } else {
            odds = odds + i;
        }
    }

    // evens = 0 + 2 + 4 = 6
    // odds = 1 + 3 + 5 = 9
    // all = 6
    assert evens == 6;
    assert odds == 9;
    assert all == 6;
    return;
}
