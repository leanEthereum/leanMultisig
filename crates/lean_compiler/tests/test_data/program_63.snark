// test_mutable_if_else_in_unrolled_loop
fn main() {
    mut even_sum = 0;
    mut odd_sum = 0;

    for i in 0..6 unroll {
        remainder = i % 2;
        if remainder == 0 {
            even_sum = even_sum + i;
        } else {
            odd_sum = odd_sum + i;
        }
    }
    // even: 0 + 2 + 4 = 6
    // odd: 1 + 3 + 5 = 9
    assert even_sum == 6;
    assert odd_sum == 9;
    return;
}
